{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {"$ref": "#/definitions/WebExercise"},
  "definitions": {
    "WebExercise": {
      "allOf": [
        {"$ref": "../exercise.schema.json"},
        {
          "properties": {
            "htmlText": {"type": "string"},
            "jsText": {"type": "string"},
            "siteSpec": {"$ref": "#/definitions/SiteSpec"},
            "files": {
              "type": "array",
              "items": {"$ref": "../exercise_file.schema.json"},
              "additionalItems": false
            },
            "sampleSolutions": {
              "type": "array",
              "items": {"$ref": "#/definitions/WebSample"},
              "additionalItems": false
            }
          },
          "required": ["files"],
          "additionalProperties": false
        }
      ]
    },
    "SiteSpec": {
      "type": "object",
      "properties": {
        "fileName": {"type": "string"},
        "htmlTasks": {
          "type": "array",
          "items": {"$ref": "#/definitions/HtmlTask"},
          "additionalItems": false
        },
        "jsTasks": {
          "type": "array",
          "items": {"$ref": "#/definitions/JsTask"},
          "additionalItems": false
        }
      },
      "required": ["fileName", "htmlTasks", "jsTasks"]
    },
    "HtmlTask": {
      "allOf": [
        {"$ref": "#/definitions/HtmlElementSpec"},
        {
          "type": "object",
          "properties": {
            "id": {"type": "integer"},
            "text": {"type": "string"}
          },
          "required": ["id", "text"],
          "additionalProperties": false
        }
      ]
    },
    "HtmlElementSpec": {
      "type": "object",
      "properties": {
        "id": {"type": "integer"},
        "xpathQuery": {"type": "string"},
        "awaitedTagName": {"type": "string"},
        "awaitedTextContent": {
          "anyOf": [
            {"type": "string"},
            {"type": "null"}
          ]
        },
        "attributes": {
          "type": "array", "items": {"$ref": "#/definitions/HtmlAttribute"}
        }
      },
      "required": ["id", "xpathQuery", "awaitedTagName", "awaitedTextContent", "attributes"],
      "additionalProperties": false
    },
    "HtmlAttribute": {
      "type": "object",
      "properties": {
        "key": {"type": "string"},
        "value": {"type": "string"}
      },
      "required": ["key", "value"]
    },
    "JsTask": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "text": {"type": "string"},
        "preConditions": {"type": "array", "items": {"$ref": "#/definitions/HtmlElementSpec"}},
        "action": {"$ref": "#/definitions/JsAction"},
        "postConditions": {"type": "array", "items": {"$ref": "#/definitions/HtmlElementSpec"}}
      },
      "required": ["id", "text", "preConditions", "action", "postConditions"],
      "additionalProperties": false
    },
    "JsAction": {
      "type": "object",
      "properties": {
        "xpathQuery": {"type": "string"},
        "keysToSend": {"type": "string"},
        "actionType": {"type": "string", "enum": ["Click", "FillOut"]}
      },
      "required": ["xpathQuery", "actionType"],
      "additionalProperties": false
    },
    "WebSample": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "files": {
          "type": "array",
          "items": {"$ref": "../exercise_file.schema.json"},
          "additionalItems": false
        }
      },
      "required": ["id", "files"],
      "additionalProperties": false
    }
  }
}
