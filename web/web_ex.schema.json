{
  "type": "array",
  "items": {"$ref": "#/definitions/WebExercise"},
  "definitions": {
    "WebExercise": {
      "allOf": [
        {"$ref": "../exercise.schema.json"},
        {
          "properties": {
            "filename": {"type": "string"},
            "htmlText": {"type": "string"},
            "htmlTasks": {
              "type": "array",
              "items": {"$ref": "#/definitions/HtmlTask"},
              "additionalItems": false
            },
            "jsText": {"type": "string"},
            "jsTasks": {
              "type": "array",
              "items": {"$ref": "#/definitions/JsTask"},
              "additionalItems": false
            },
            "files": {
              "type": "array",
              "items": {"$ref": "../exercise_file.schema.json"},
              "additionalItems": false
            },
            "samples": {
              "type": "array",
              "items": {"$ref": "#/definitions/WebSample"},
              "additionalItems": false
            }
          },
          "required": ["filename", "htmlTasks", "jsTasks", "files", "samples"],
          "additionalProperties": false
        }
      ]
    },
    "HtmlTask": {
      "type": "object",
      "properties": {
        "text": {"type": "string"},
        "elementSpec": {"$ref": "#/definitions/HtmlElementSpec"}
      },
      "required": ["text", "elementSpec"],
      "additionalProperties": false
    },
    "HtmlElementSpec": {
      "type": "object",
      "properties": {
        "id": {"type": "integer"},
        "xpathQuery": {"type": "string"},
        "awaitedTag": {"type": "string"},
        "awaitedTextContent": {"type": "string"},
        "attributes": {
          "type": "array", "items": {"$ref": "#/definitions/HtmlAttribute"}
        }
      },
      "required": ["id", "xpathQuery", "awaitedTag"],
      "additionalProperties": false
    },
    "HtmlAttribute": {
      "type": "object",
      "properties": {
        "key": {"type": "string"},
        "value": {"type": "string"}
      },
      "required": ["key", "value"]
    },
    "JsTask": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "text": {"type": "string"},
        "preConditions": {"type": "array", "items": {"$ref": "#/definitions/HtmlElementSpec"}},
        "action": {"$ref": "#/definitions/JsAction"},
        "postConditions": {"type": "array", "items": {"$ref": "#/definitions/HtmlElementSpec"}}
      },
      "required": ["id", "text", "preConditions", "action", "postConditions"],
      "additionalProperties": false
    },
    "JsAction": {
      "type": "object",
      "properties": {
        "xpathQuery": {"type": "string"},
        "keysToSend": {"type": "string"},
        "actionType": {"type": "string", "enum": ["Click", "FillOut"]}
      },
      "required": ["xpathQuery", "actionType"],
      "additionalProperties": false
    },
    "WebSample": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "files": {
          "type": "array",
          "items": {"$ref": "../exercise_file.schema.json"},
          "additionalItems": false
        }
      },
      "required": ["id", "files"],
      "additionalProperties": false
    }
  }
}
