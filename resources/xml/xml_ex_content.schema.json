{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/XmlExercise",
  "definitions": {
    "XmlExercise": {
      "allOf": [
        {"$ref": "../../exercise.schema.json"},
        {
          "properties": {
            "content": {"$ref": "#/definitions/XmlExerciseContent"}
          },
          "required": ["content"],
          "additionalProperties": false
        }
      ]
    },
    "XmlExerciseContent": {
      "type": "object",
      "properties": {
        "grammarDescription": {"$ref": "../../long_text.schema.json"},
        "rootNode": {"type": "string"},
        "sampleSolutions": {"type": "array", "items": {"$ref": "#/definitions/XmlSample"}}
      },
      "required": ["grammarDescription", "rootNode", "sampleSolutions"],
      "additionalProperties": false
    },
    "XmlSample": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "sample": {"$ref": "#/definitions/XmlSolution"}
      },
      "required": ["id", "sample"]
    },
    "XmlSolution": {
      "type": "object",
      "properties": {
        "grammar": {"type": "string"},
        "document": {"type": "string"}
      },
      "required": ["grammar", "document"]
    }
  }
}
