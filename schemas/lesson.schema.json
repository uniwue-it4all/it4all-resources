{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lesson",
  "$ref": "#/definitions/Lesson",
  "definitions": {
    "Lesson": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "title": {"type": "string"},
        "description": {"type": "string"},
        "dependsOn": {"type": "array", "items": {"type": "integer"}},
        "content": {
          "type": "array",
          "items": {"$ref": "#/definitions/LessonContent"}
        }
      },
      "required": ["id", "title", "description", "dependsOn", "content"]
    },
    "LessonContent": {
      "anyOf": [
        {"$ref": "#/definitions/LessonTextContent"},
        {"$ref": "#/definitions/LessonQuestionsContent"}
      ]
    },
    "BasicLessonContent": {
      "type": "object",
      "properties": {
        "id": {"type": "number"}
      },
      "required": ["id"]
    },
    "LessonTextContent": {
      "allOf": [
        {"$ref": "#/definitions/BasicLessonContent"},
        {
          "type": "object",
          "properties": {
            "_type": {"type": "string", "enum": ["Text"]},
            "contentFile": {"type": "string"}
          },
          "required": ["_type", "contentFile"]
        }
      ]
    },
    "LessonQuestionsContent": {
      "allOf": [
        {"$ref": "#/definitions/BasicLessonContent"},
        {
          "type": "object",
          "properties": {
            "_type": {"type": "string", "enum": ["Questions"]},
            "questionsFile": {"type": "string"}
          }
        }
      ]
    }
  }
}
