{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {"type": "number"},
    "collectionId": {"type": "number"},
    "toolId": {"type": "string"},
    "semanticVersion": {"$ref": "./semantic_version.schema.json"},
    "title": {"type": "string"},
    "authors": {
      "type": "array",
      "items": {"type": "string"}
    },
    "text": {"$ref": "./long_text.schema.json"},
    "tags": {
      "type": "array",
      "items": {"$ref": "./ex_tag.schema.json"}
    },
    "state": {"$ref": "./exercise_state.schema.json"}
  },
  "required": [
    "id", "collectionId", "toolId", "semanticVersion", "title", "authors", "text", "tags", "state"
  ]
}
