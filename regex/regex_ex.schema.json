{
  "type": "array",
  "items": {
    "$ref": "#/definitions/RegexExercise"
  },
  "definitions": {
    "RegexExercise": {
      "allOf": [
        {"$ref": "../exercise.schema.json"},
        {
          "properties": {
            "maxPoints": {"type": "number"},
            "correctionType": {"type": "string", "enum": ["MATCHING", "EXTRACTION"]},
            "sampleSolutions": {"type": "array", "items": {"$ref": "#/definitions/RegexSample"}},
            "matchTestData": {"type": "array", "items": {"$ref": "#/definitions/RegexMatchTestData"}},
            "extractionTestData": {"type": "array", "items": {"$ref": "#/definitions/RegexExtractionTestData"}}
          },
          "required": ["maxPoints", "correctionType", "sampleSolutions", "matchTestData", "extractionTestData"],
          "additionalProperties": false
        }
      ]
    },
    "RegexSample": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "sample": {"type": "string"}
      },
      "required": ["id", "sample"],
      "additionalProperties": false
    },
    "RegexMatchTestData": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "data": {"type": "string"},
        "isIncluded": {"type": "boolean"}
      },
      "required": ["id", "data", "isIncluded"],
      "additionalProperties": false
    },
    "RegexExtractionTestData": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "base": {"type": "string"},
        "toExtract": {"type": "array", "items": {"type": "string"}}
      },
      "required": ["id", "base", "toExtract"],
      "additionalProperties": false
    }
  }
}
