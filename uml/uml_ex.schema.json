{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {"$ref": "#/definitions/UmlExercise"},
  "definitions": {
    "UmlExercise": {
      "allOf": [
        {"$ref": "../exercise.schema.json"},
        {
          "properties": {
            "mappings": {"type": "array", "items": {"$ref": "#/definitions/UmlMapping"}},
            "toIgnore": {"type": "array", "items": {"type": "string"}},
            "sampleSolutions": {"type": "array", "items": {"$ref": "#/definitions/UmlSampleSolution"}}
          },
          "required": ["mappings", "toIgnore"],
          "additionalProperties": false
        }
      ]
    },
    "UmlMapping": {
      "type": "object",
      "properties": {
        "key": {"type": "string"},
        "value": {"type": "string"}
      },
      "required": ["key", "value"]
    },
    "UmlSampleSolution": {
      "allOf": [
        {"$ref": "uml_class_diagram.schema.json"},
        {
          "type": "object",
          "properties": {
            "id": {"type": "integer"}
          }
        }
      ]
    }
  }
}
